{
  "version": "0.1.0",
  "license": "MIT",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/cosmiconfig-ts-loader.esm.js",
      "require": "./dist/index.js"
    }
  },
  "keywords": [
    "cosmiconfig",
    "cosmiconfig-loader",
    "typescript"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/achmadk/cosmiconfig-ts-loader.git"
  },
  "files": [
    "dist"
  ],
  "engines": {
    "node": ">=10"
  },
  "scripts": {
    "start": "tsdx watch",
    "build": "tsdx build --target node",
    "test": "tsdx test",
    "lint": "tsdx lint --ignore-pattern test/__fixtures__/test-error.config.ts --fix",
    "prepare": "npm run build",
    "size": "size-limit",
    "analyze": "size-limit --why"
  },
  "peerDependencies": {
    "cosmiconfig": "7.0.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "tsdx lint --ignore-pattern test/__fixtures__/test-error.config.ts -fix"
    }
  },
  "prettier": {
    "printWidth": 80,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "name": "cosmiconfig-ts-loader",
  "author": "Achmad Kurnianto",
  "module": "dist/cosmiconfig-ts-loader.esm.js",
  "size-limit": [
    {
      "path": "dist/cosmiconfig-ts-loader.cjs.production.min.js",
      "limit": "10 KB"
    },
    {
      "path": "dist/cosmiconfig-ts-loader.esm.js",
      "limit": "10 KB"
    }
  ],
  "devDependencies": {
    "@size-limit/preset-small-lib": "^4.9.2",
    "@skypack/package-check": "0.2.2",
    "@types/lodash": "4.14.168",
    "cosmiconfig": "7.0.0",
    "husky": "^5.1.0",
    "size-limit": "^4.9.2",
    "tsdx": "^0.14.1",
    "tslib": "^2.1.0",
    "typescript": "^4.1.5"
  },
  "dependencies": {
    "lodash": "4.17.21",
    "lodash-es": "4.17.21",
    "make-error": "1.3.6",
    "ts-node": "9.1.1"
  }
}
